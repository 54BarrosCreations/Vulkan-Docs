#!/usr/bin/python3

from genspec import *

buildBranch('1.0',
            coreTargets = True,
            repoDir = '/home/tree/git/vulkan',
            outDir = '/home/tree/git/vulkan/out')
buildBranch('1.0-wsi_extensions',
            coreTargets = False,
            repoDir = '/home/tree/git/vulkan',
            outDir = '/home/tree/git/vulkan/out')

print('echo Info: post-generation cleanup')
print('git checkout ' + coreBranch)

createTags(buildOnFriday())
